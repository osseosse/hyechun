.image-slider {
	z-index:0;
	margin:0 auto;
	padding:0;
	width:100%;
	height:100vh;
}
.image-slide {
	height:100vh;
	margin: 0 auto;
}
.slick-slide.slick-center {
	/* transform:scale(1.2);크기변화 */
	transition:transform .8s 1.4s cubic-bezier(.84,0,.08,.99);
}
.slick-slide {
	transition:transform .7s cubic-bezier(.84,0,.08,.99);
}


