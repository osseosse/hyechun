.text-slider-wrapper {
	z-index:2;
	position:absolute;
	width:100%;
	top:30%;
}
.text-slider {
	margin:0%;
	padding:0%;
	height:100vh;
}
.text-slide h1 {
	color:#fff;
	font-size:3.5rem;
	font-weight:lighter;
	text-transform:uppercase;
	padding-left:10%;
}






@media(max-width:990px) {
	.mHide{
		display:none;  
	}
		.mCenter {
		text-align:center
	}
	.block-2, {
		display:none;
	}
	 .overlay {
		width:100%
	}
	.block-1 {
		width:100%;
	}
	.block-3 {
		width:12%;
	}
	.slide-slick {
		display:none !important;
	}
	.text-slide h1 {
		font-size:25px !important;
		margin-top:80px
	}
	.text-slider-wrapper {
		position:absolute;
		top:20% !important;
	}
	.slider-control {
		left: 22.5%;
	}
}

